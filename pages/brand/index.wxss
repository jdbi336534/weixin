.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.shoeinfom {
    width: 100%;
    flex: 1;
}

.buy {
    width: 100%;
    height: 70px;
    background-color: #f1f1f1;
}

swiper.showimg {
    display: block;
    height: 320px;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.listname {
    padding: 10px;
    color: #686868;
    font-size: 20px;
    line-height: 25px;
    max-height: 42px;
    overflow: hidden;
}

.storename {
    padding-left: 10px;
    color: #f30000;
    line-height: 1.2em;
    font-size: 14px;
}

.price {
    padding: 10px;
    font-size: 20px;
    color: #f30000;
    font-weight: bold;
}

.lastprice {
    margin-left: 30px;
    color: #a8a8a8;
    font-weight: normal;
    text-decoration: line-through;
}

.info {
    padding-left: 10px;
    color: #999;
    line-height: 1.2em;
    font-size: 14px;
}

.prod-items {
    border-top: 1px solid #d3d3d3;
    padding-left: 10px;
    padding-top: 10px;
}

.buy {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
}

.leftbtn {
    display: flex;
    flex-direction: row;
}

.rightbtn {
    width: 68%;
}

.shoucang, .cart {
    width: 45px;
    height: 45px;
    margin-top: 12px;
    margin-left: 10%;
}

.shoucang image, .cart image {
    width: 45px;
    height: 45px;
    display: block;
}

.rightbtn ul {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
}

.rightbtn li {
    width: 45%;
    margin-left: 0;
    margin-right: 4%;
    border-radius: 2px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    box-sizing: border-box;
}

li.buyBtn {
    background: #fe1818;
    border: none;
    color: #FFF;
}

li.addCart {
    background: #fe8918;
    border: none;
    color: #FFF;
}
